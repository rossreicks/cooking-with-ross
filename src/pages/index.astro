---
import "../styles/global.css";

import { getCollection } from 'astro:content';

const recipes = await getCollection('recipes');
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cooking with Ross</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <div class="max-w-3xl mx-auto p-4 sm:p-6">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-8 text-center">Cooking with Ross</h1>
      <ul class="space-y-4">
        {recipes.map((recipe) => (
          <li
            class="p-4 border rounded-lg hover:shadow-lg transition-shadow"
          >
            <a href={`/recipes/${recipe.slug}/`} class="text-2xl font-semibold text-blue-600">
              {recipe.data.title}
            </a>
            <p class="text-gray-600">Prep Time: {recipe.data.prep_time} | Cook Time: {recipe.data.cook_time}</p>
          </li>
        ))}
      </ul>
    </div>
  </body>
</html>
